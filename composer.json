{
  "modified": "2026-02-26",
  "name": "douglasgreen/module-quizzer",
  "description": "A self-hosted e-learning app for building courses with module-based lessons and quizzes.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "ext-pdo": "*",
    "ext-dom": "*",
    "ext-mbstring": "*",
    "twig/twig": "^3.8",
    "symfony/yaml": "^7.0"
  },
  "require-dev": {
    "douglasgreen/php-linter": "^0.9.0",
    "friendsofphp/php-cs-fixer": "^3.94.2",
    "phpstan/phpstan": "^2.1.39",
    "rector/rector": "^2.3.8"
  },
  "suggest": {
     "ext-intl": "For Unicode NFKC normalization in fill-in-blank grading"
  },
  "autoload": {
    "psr-4": {
      "DouglasGreen\\ModuleQuizzer\\": "src/",
      "DouglasGreen\\ModuleQuizzer\\Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "8.3"
    },
    "sort-packages": true
  },
  "scripts": {
    "lint": [
      "php-linter",
      "php-cs-fixer fix --dry-run --verbose",
      "phpstan analyse",
      "rector process --dry-run"
    ],
    "lint:fix": [
      "php-cs-fixer fix",
      "rector process"
    ],
    "test": [
      "phpunit"
    ],
    "test:unit": [
      "phpunit --testsuite=Unit"
    ],
    "test:integration": [
      "phpunit --testsuite=Integration"
    ],
    "qa": [
      "@lint"
    ]
  }
}
