{
    "name": "douglasgreen/module-quizzer",
    "description": "A self-hosted e-learning app for building courses with module-based lessons and quizzes.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "twig/twig": "^3.8",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "suggest": {
        "ext-intl": "For Unicode NFKC normalization in fill-in-blank grading"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\ModuleQuizzer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DouglasGreen\\ModuleQuizzer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs:check": "phpcs --standard=PSR12 src/",
        "stan": "phpstan analyse -l 8 src/",
        "test": "phpunit",
        "qa": ["@cs:check", "@stan", "@test"]
    }
}
