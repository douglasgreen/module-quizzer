{% extends 'base.html.twig' %}

{% block title %}Courses â€” ModuleQuizzer{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Courses</h1>
  <a href="/course/create" class="btn btn-primary">+ New Course</a>
</div>

{% if courses|length > 0 %}
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for course in courses %}
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title h5">
              <a href="/course/{{ course.course_id }}" class="text-decoration-none">
                {{ course.title }}
              </a>
            </h2>
            {% if course.description %}
              <p class="card-text text-muted">
                {{ course.description|slice(0, 120) }}{% if course.description|length > 120 %}&hellip;{% endif %}
              </p>
            {% endif %}
          </div>
          <div class="card-footer text-muted small">
            Created {{ course.created_at|date('M j, Y') }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% else %}
  <div class="text-center py-5">
    <p class="lead text-muted">No courses yet. Create your first course to get started.</p>
    <a href="/course/create" class="btn btn-primary btn-lg">Create Course</a>
  </div>
{% endif %}
{% endblock %}
